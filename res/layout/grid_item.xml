<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.wdonahue.rapidparsing.views.HeightMatchesWidthImageView
        android:id="@+id/imgScreencapThumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/backdrop">

        <ImageView
            android:id="@+id/imgChannelThumbnail"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="5dp">

            <TextView
                android:maxLines="1"
                android:id="@+id/lblGame"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:maxLines="1"
                android:id="@+id/lblUser"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:maxLines="1"
                    android:id="@+id/lblViewers"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:gravity="right"
                    android:id="@+id/lblNew"
                    android:visibility="gone"
                    android:paddingRight="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="#F00"
                    android:textSize="12sp"
                    android:text="@string/newtext" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_gravity="bottom"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/backdrop"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgContentType"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_toRightOf="@+id/imgContentType"
            android:id="@+id/lblTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="2"
            android:maxLines="2"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </RelativeLayout>


</FrameLayout>